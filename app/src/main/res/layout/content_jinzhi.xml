<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cathleen.mycalculator.JinzhiActivity"
    tools:showIn="@layout/activity_jinzhi">

    <EditText
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_jinzhi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="4"
        android:layout_below="@+id/show_jinzhi">

        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/one"
            android:layout_row="0"
            android:layout_column="0" />
        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/two"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/three"
            android:layout_row="0"
            android:layout_column="2" />
        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/four"
            android:layout_row="0"
            android:layout_column="3" />
        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/five"
            android:layout_row="1"
            android:layout_column="0" />
        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/six"
            android:layout_row="1"
            android:layout_column="1" />
        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/seven"
            android:layout_row="1"
            android:layout_column="2" />
        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/eight"
            android:layout_row="1"
            android:layout_column="3" />
        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/nine"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/zero"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:text="CE"
            android:id="@+id/ce"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="十进制二进制"
            android:id="@+id/toBinary"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="4"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="十进制八进制"
            android:id="@+id/toOctal"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="4"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="十进制十六进制"
            android:id="@+id/toHex"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="4"/>

    </GridLayout>
</RelativeLayout>
