<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cathleen.mycalculator.MoreActivyty"
    tools:showIn="@layout/activity_more_activyty">

    <EditText
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="这里将显示算式和结果"
        android:id="@+id/result_more"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:paddingTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/result_more"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button

                android:text="1"
                android:id="@+id/one"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="60dp"
                android:layout_height="50dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="2"
                android:id="@+id/two"
                android:layout_row="1"
                android:layout_column="1" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="3"
                android:id="@+id/three"
                android:layout_row="1"
                android:layout_column="2" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="x^2"
                android:id="@+id/square"
                android:layout_row="1"
                android:layout_column="3" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="4"
                android:id="@+id/four"
                android:layout_row="2"
                android:layout_column="0" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="5"
                android:id="@+id/five"
                android:layout_row="2"
                android:layout_column="1" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="6"
                android:id="@+id/six"
                android:layout_row="2"
                android:layout_column="2" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="x^3"
                android:id="@+id/cube"
                android:layout_row="2"
                android:layout_column="3" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="7"
                android:id="@+id/seven"
                android:layout_row="3"
                android:layout_column="0" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="8"
                android:id="@+id/eight"
                android:layout_row="3"
                android:layout_column="1" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="9"
                android:id="@+id/nine"
                android:layout_row="3"
                android:layout_column="2" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="√"
                android:id="@+id/radical"
                android:layout_row="3"
                android:layout_column="3" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="返回"
                android:id="@+id/return_main"
                android:layout_row="4"
                android:layout_column="0" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="0"
                android:id="@+id/zero"
                android:layout_row="4"
                android:layout_column="1" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="."
                android:id="@+id/dot"
                android:layout_row="4"
                android:layout_column="2" />

            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="x^y"
                android:id="@+id/power"
                android:layout_row="4"
                android:layout_column="3" />

            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="SIN"
                android:id="@+id/sin"
                android:layout_row="0"
                android:layout_column="0" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="COS"
                android:id="@+id/cos"
                android:layout_row="0"
                android:layout_column="1" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="TAN"
                android:id="@+id/tan"
                android:layout_row="0"
                android:layout_column="2" />
            <Button
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="1/"
                android:id="@+id/reciprocal"
                android:layout_row="0"
                android:layout_column="3" />

        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="CE"
                android:id="@+id/ce" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="DEL"
                android:id="@+id/del" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:text="="
                android:id="@+id/calculate"
                android:layout_weight="0.32" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
